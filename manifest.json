{
  "manifest_version": 2,

  "name": "Hangouts Joiner",
  "description": "Join a google hangouts room",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Join a room"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  "background": {
    "scripts": ["popup.js"]
  }
}
